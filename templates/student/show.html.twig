{% extends 'base.html.twig' %}

{% block title %}Étudiant{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="form-card">
            <div class="card-header bg-white border-bottom">
                <h3 class="mb-0 text-dark">
                    <i class="bi bi-person-badge"></i> Détails de l'étudiant
                </h3>
            </div>
            
            <table class="table table-borderless">
                <tbody>
                    <tr>
                        <th class="w-25 text-muted bg-light ps-3">Id</th>
                        <td class="fw-bold">{{ student.id }}</td>
                    </tr>
                    <tr>
                        <th class="text-muted bg-light ps-3">Prénom</th>
                        <td>{{ student.name }}</td>
                    </tr>
                    <tr>
                        <th class="text-muted bg-light ps-3">Nom</th>
                        <td>{{ student.surname }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="form-actions d-flex justify-content-between mt-4 pt-3 border-top">
                <a href="{{ path('app_student_index') }}" class="btn btn-cancel">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
                
                <div class="d-flex gap-2">
                    <a href="{{ path('app_student_edit', {'id': student.id}) }}" class="btn btn-warning text-dark">
                        <i class="bi bi-pencil-square"></i> Modifier
                    </a>
                    {{ include('student/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

