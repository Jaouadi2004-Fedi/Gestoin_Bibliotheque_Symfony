{% extends 'base.html.twig' %}

{% block title %}Liste des Auteurs{% endblock %}

{% block body %}
<div class="row mb-4 align-items-center">
    <div class="col-md-6">
        <h1 class="fw-bold mb-0 text-dark">
            <i class="bi bi-people-fill text-primary"></i> Liste des Auteurs
        </h1>
    </div>
    <div class="col-md-6 text-md-end">
        <a href="{{ path('app_author_new') }}" class="btn btn-submit shadow-sm">
            <i class="bi bi-plus-circle"></i> Ajouter un nouvel auteur
        </a>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 text-muted">
            <i class="bi bi-list-check"></i> Auteurs enregistrés
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="thead-vivid-blue">
                    <tr>
                        <th scope="col" class="ps-4">ID</th>
                        <th scope="col">Prénom</th>
                        <th scope="col">Nom</th>
                        <th scope="col" class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for author in authors %}
                    <tr>
                        <td class="ps-4 fw-bold text-secondary">#{{ author.id }}</td>
                        <td>{{ author.name }}</td>
                        <td>{{ author.surname }}</td>
                        <td class="text-end pe-4">
                            <div class="btn-group">
                                <a href="{{ path('app_author_show', {'id': author.id}) }}" class="btn btn-sm btn-outline-info" title="Voir">
                                    <i class="bi bi-eye"></i> Voir
                                </a>
                                <a href="{{ path('app_author_edit', {'id': author.id}) }}" class="btn btn-sm btn-outline-warning" title="Modifier">
                                    <i class="bi bi-pencil-square"></i> Modifier
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center py-5 text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                            Aucun auteur trouvé.
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}


