{% extends 'base.html.twig' %}

{% block title %}Add New Book{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0"><i class="bi bi-bookmark-plus-fill"></i> Add New Book</h4>
        </div>

        <div class="card-body">
            {{ form_start(form) }}
            
            <div class="mb-3">
                {{ form_label(form.title, 'Title', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.authors, 'Author(s)', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.authors, {'attr': {'class': 'form-select'}}) }}
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_book_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to list
                </a>
                <button class="btn btn-success">
                    <i class="bi bi-save"></i> Save Book
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
