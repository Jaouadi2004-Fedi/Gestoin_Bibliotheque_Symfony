<form method="post" action="{{ path('app_book_delete', {'id': book.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
    <button class="btn btn-outline-danger btn-sm">
        <i class="bi bi-trash"></i> Supprimer
    </button>
</form>


