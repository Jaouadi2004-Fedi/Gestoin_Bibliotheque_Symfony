{% extends 'base.html.twig' %}

{% block title %}Modifier l'emprunt{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="mb-4 text-center">
            <h2 class="fw-bold text-dark">
                <i class="fas fa-edit text-primary"></i>
                Modifier l'emprunt
            </h2>
            <p class="text-muted">Mettre à jour les informations de l'emprunt</p>
        </div>
        
        {{ include('borrowing/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        
        <div class="d-flex justify-content-between align-items-center mt-3">
